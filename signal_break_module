module signal_break(led,push,green);
input [3:0]green;
input [3:0]push;
output reg [3:0]led;
initial led=4'b1111;

always @(*)
begin
    if(push[0]==0)
    begin
        if(green[0]==1)
            led[0]=0;
    end

    if(push[1]==0)
    begin
        if(green[1]==1)
            led[1]=0;
    end

    if(push[2]==0)
    begin
        if(green[2]==1)
            led[2]=0;
    end

    if(push[3]==0)
    begin
        if(green[3]==1)
            led[3]=0;
    end
end
endmodule
